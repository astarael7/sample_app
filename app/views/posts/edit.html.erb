<% provide(:title, "Edit Post") %>
<h1>Update Your Post</h1>
<div class="row">
	<aside class="span3">
		<section>
			<%= render 'shared/user_info' %>
		</section>
	</aside>
	<div class="span6">
		<%= form_for([current_user, @post]) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= render 'fields', f: f %>
			<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>