<li>
	<%= gravatar_for user, size: 52 %>
	<%= link_to user.name, user %>
	<% if current_user.admin? %>
		<%= link_to "Edit", user, href: edit_user_path(user) %>
		<% if !current_user?(user) %>
			<%= link_to "Delete", user, method: :delete,
										data: { confirm: "Are you sure?" } %>
		<% end %>
	<% end %>
</li>