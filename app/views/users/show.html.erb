<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span3">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<div><% if @user.admin? %>Admin<% end %></div>
			<div><%= link_to "New Post", new_user_post_path(current_user) if current_user?(@user) %></div>
		</section>
	</aside>
	<div class="span8">
		<% if @user.posts.any? %>
			<h3>Posts (<%= @user.posts.count %>)</h3>
			<ol class="posts">
				<%= render @posts, user: @user %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>
</div>
<%= @user.email %>